<Window x:Name="app" x:Class="TimerAndClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerAndClock"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" Height="400" SizeChanged="App_SizeChanged" Loaded="App_Loaded">
    <Canvas x:Name="timeCanvas" HorizontalAlignment="Left" Height="378" VerticalAlignment="Top" Width="790" Background="Black" >
        <TextBlock x:Name="timer" Text="00:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="300" Foreground="White" Canvas.Left="10" Background="#FFF50909"/>

    </Canvas>
</Window>
